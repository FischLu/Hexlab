{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "hexlab",
  "version": "0.1.0",
  "identifier": "lulu.cork.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "HexLab",
        "width": 650,
        "height": 780,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.icns",
      "icons/icon.png"
    ]
  }
}
